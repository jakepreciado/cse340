<% if (title) { %>
  <h1>
    <%= title %>
  </h1>
<% } else { res.redirect('/') } %>

<%- messages() %>

<!-- Display validation errors -->
<% if (errors && errors.length > 0) { %>
  <ul class="notice">
    <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>


    <!-- Form for adding a new vehicle -->
    <form action="/inv/add-inventory" method="POST" id="addInventoryForm" novalidate>
      <!-- Classification dropdown -->
      <label for="classification_id">Classification</label>
      <%- classificationList %>
  
      <!-- Vehicle make -->
      <label for="inv_make">Make</label>
      <input 
        type="text" 
        id="inv_make" 
        name="inv_make" 
        value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>" 
        required 
        minlength="2">
  
      <!-- Vehicle model -->
      <label for="inv_model">Model</label>
      <input 
        type="text" 
        id="inv_model" 
        name="inv_model" 
        value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>" 
        required 
        minlength="2">
  
      <!-- Vehicle year -->
      <label for="inv_year">Year</label>
      <input 
        type="text" 
        id="inv_year" 
        name="inv_year" 
        value="<%= typeof inv_year !== 'undefined' ? inv_year : '' %>" 
        required 
        pattern="\d{4}" 
        title="Year must be a 4-digit number.">
  
      <!-- Vehicle description -->
      <label for="inv_description">Description</label>
      <textarea 
        id="inv_description" 
        name="inv_description" 
        required 
        minlength="10"><%= typeof inv_description !== 'undefined' ? inv_description : '' %></textarea>
  
      <!-- Vehicle image path -->
      <label for="inv_image">Image Path</label>
      <input 
        type="text" 
        id="inv_image" 
        name="inv_image" 
        value="<%= typeof inv_image !== 'undefined' ? inv_image : '/images/no-image.png' %>" 
        required
        pattern=".*\.(jpg|jpeg|png|gif)$" 
        title="Image path must be a valid image file (jpg, jpeg, png, gif).">
  
      <!-- Vehicle thumbnail path -->
      <label for="inv_thumbnail">Thumbnail Path</label>
      <input 
        type="text" 
        id="inv_thumbnail" 
        name="inv_thumbnail" 
        value="<%= typeof inv_thumbnail !== 'undefined' ? inv_thumbnail : '/images/no-image-thumbnail.png' %>" 
        required
        pattern=".*\.(jpg|jpeg|png|gif)$" 
        title="Thumbnail path must be a valid image file (jpg, jpeg, png, gif).">
  
      <!-- Vehicle price -->
      <label for="inv_price">Price</label>
      <input 
        type="number" 
        id="inv_price" 
        name="inv_price" 
        value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>" 
        required 
        min="0" 
        step="0.01">
  
      <!-- Vehicle miles -->
      <label for="inv_miles">Miles</label>
      <input 
        type="number" 
        id="inv_miles" 
        name="inv_miles" 
        value="<%= typeof inv_miles !== 'undefined' ? inv_miles : '' %>" 
        required 
        min="0">
  
      <!-- Vehicle color -->
      <label for="inv_color">Color</label>
      <input 
        type="text" 
        id="inv_color" 
        name="inv_color" 
        value="<%= typeof inv_color !== 'undefined' ? inv_color : '' %>" 
        required 
        minlength="3">
  
      <!-- Submit button -->
      <button type="submit">Add Vehicle</button>
    </form>
