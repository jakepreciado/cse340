<% if (title) { %>
    <h1 class="edit-inventory-title">
      <%= title %>
    </h1>
  <% } else { res.redirect('/') } %>
  
  <%- messages() %>
  
  <!-- Display validation errors -->
  <% if (errors && errors.length > 0) { %>
    <ul class="notice">
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

<div class="login-form">
    <form id="loginForm" action="/account/login" method="post">
        <div class="form-group">
            <label for="account_email">Email</label>
            <input type="email" id="accountEmail" name="account_email" required>
        </div>
        <div class="form-group">
            <label for="account_password">Password</label>
            <input pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" type="password"
                id="accountPassword" name="account_password" required>
        </div>
        <div class="form-group">
            <p>Password Requirements</p>
            <ul>
                <li>At least 12 characters</li>
                <li>1 number</li>
                <li>1 capital letter</li>
                <li>1 special character</li>
            </ul>
        </div>
        <div class="form-group">
            <button type="submit">Login</button>
        </div>
    </form>

    <p>Don't have an account? <a href="/account/register">Register here</a>.</p>
</div>

