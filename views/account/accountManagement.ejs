<h1 class="login-title">
    <%= title %>
</h1>

<% if (typeof flashMessage !=='undefined' ) { %>
    <div class="flash-message">
        <p>
            <%= flashMessage %>
        </p>
        <%= messages() %>
        <% if (errors) { %>
            <ul class="notice">
                <% errors.array().forEach(error=> { %>
                    <li>
                        <%= error.msg %>
                    </li>
                    <% }) %>
            </ul>
            <% } %>
    </div>
<% } %>
<div class="account-management-menu">
  <% if (messages.success) { %>
    <div class="flash-success"><%= messages.success %></div>
  <% } %>
  <% if (messages.error) { %>
    <div class="flash-error"><%= messages.error %></div>
  <% } %>

  <% if (accountData) { %>
    <div>
      <h2>Welcome <%= accountData.account_firstname %></h2>
      <p>
        <a href="/account/update/<%= accountData.account_id %>" title="Update your account information">
          Update Account Information
        </a>
      </p>
    </div>

    <% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
    <div>
      <h2>Inventory Management</h2>
      <p>
        <a href="/inv/" title="Access the Inventory Management view">Manage Inventory</a>
      </p>
    </div>
    <% } %>
  <% } else { %>
    <p>You are not logged in. Please <a href="/account/login">log in</a>.</p>
  <% } %>
  </div>
